<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PDFReader" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_red</item>
        <item name="colorPrimaryVariant">@color/dark_red</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_yellow</item>
        <item name="colorSecondaryVariant">@color/dark_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/lightgrey</item>
    </style>
    <style name="Theme.PDFReader.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.PDFReader.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.PDFReader.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--  TOOLBAR  -->
    <style name="MyToolbar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/grey1</item>
        <item name="colorPrimary">@color/teal_700</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/red</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!-- READER SUB ACTIVITY   -->
    <style name="Reader" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/lightgrey</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>